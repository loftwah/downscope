---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ogImage from '../assets/images/og-downscope.jpg';
import '../styles/global.css';
const { content } = Astro.props;
---

<html lang="en" class="dark">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{content.title}</title>
		<!-- OpenGraph meta tags -->
		<meta property="og:title" content={content.title} />
		<meta property="og:description" content={content.description || 'Downscope â€“ AI, betrayal, and burnout in a remote SaaS team'} />
		<meta property="og:image" content={ogImage.src} />
		<meta property="og:url" content={Astro.url.href} />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
	</head>
	<body class="min-h-screen flex flex-col bg-background text-foreground">
		<Header />
		<!-- Content container with improved desktop layout -->
		<main class="w-full flex-grow mx-auto">
			<!-- Inner content wrapper with wider max-width for desktop -->
			<div class="w-full max-w-4xl lg:max-w-5xl xl:max-w-6xl mx-auto px-6 sm:px-8 md:px-12 lg:px-16 py-6 md:py-8">
				<article class="prose prose-custom dark:prose-invert w-full">
					<slot />
				</article>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style is:global>
/* Ensure iframe and images stack correctly */
iframe, img {
  z-index: 1;
  max-width: 100%;
  height: auto;
  border-radius: 0.375rem;
}

/* Improve readability with proper line length */
.prose-custom {
  width: 100%;
  overflow-wrap: break-word;
  word-wrap: break-word;
}

/* Mobile-specific improvements */
@media (max-width: 640px) {
  .prose-custom {
    font-size: 16px;
    line-height: 1.6;
  }
  
  .prose-custom pre {
    font-size: 14px;
    padding: 1rem;
    overflow-x: auto;
  }
  
  .prose-custom table {
    display: block;
    overflow-x: auto;
    font-size: 14px;
  }
  
  .prose-custom h1 {
    font-size: 1.75rem;
  }
  
  .prose-custom h2 {
    font-size: 1.5rem;
    margin-top: 1.75rem;
  }
  
  .prose-custom h3 {
    font-size: 1.25rem;
    margin-top: 1.5rem;
  }
  
  /* Reduce unnecessary padding */
  .prose-custom ul,
  .prose-custom ol {
    padding-left: 1.25rem;
  }
}

/* Better YouTube embed responsiveness */
.video-container {
  position: relative;
  width: 100%;
  padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
  margin: 1.5rem 0;
}

.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 0.375rem;
  border: 1px solid var(--border);
}
</style>